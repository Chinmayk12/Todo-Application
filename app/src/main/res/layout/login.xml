<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/phonenumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="624dp"
        android:text="Welcome Back!"
        android:textSize="35dp"
        android:textStyle="italic|bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.613"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/loginemail"
        android:layout_width="358dp"
        android:layout_height="57dp"
        android:layout_marginTop="274dp"
        android:layout_marginBottom="405dp"
        android:background="@drawable/rounded_edittext_background"
        android:drawableStart="@drawable/baseline_person_24"
        android:drawablePadding="8dp"
        android:drawableTint="#673AB7"
        android:gravity="center"
        android:hint="Enter Login Email"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/loginpassword"
        android:layout_width="358dp"
        android:layout_height="57dp"
        android:layout_marginTop="357dp"
        android:layout_marginBottom="317dp"
        android:background="@drawable/rounded_edittext_background"
        android:drawableStart="@drawable/baseline_lock_24"
        android:drawablePadding="8dp"
        android:drawableTint="#673AB7"
        android:gravity="center"
        android:hint="Enter Password"
        android:inputType="numberPassword"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.566"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/forgotpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="239dp"
        android:layout_marginTop="426dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="285dp"
        android:text="Forgot Password ?"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/signupbtn"
        android:layout_width="358dp"
        android:layout_height="57dp"
        android:layout_marginTop="465dp"
        android:layout_marginBottom="220dp"
        android:text="Login"
        android:onClick="loginhere"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/orloginwith"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="568dp"
        android:layout_marginBottom="166dp"
        android:text="Or Login With"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.525"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.166" />

    <ImageView
        android:id="@+id/clockimage"
        android:layout_width="154dp"
        android:layout_height="124dp"
        android:layout_marginTop="126dp"
        android:layout_marginBottom="479dp"
        android:src="@drawable/clock_image1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/googlelogin"
        android:onClick="buttonGoogleSignIn"
        android:layout_width="75dp"
        android:layout_height="76dp"
        android:layout_marginStart="119dp"
        android:layout_marginTop="605dp"
        android:layout_marginEnd="217dp"
        android:layout_marginBottom="50dp"
        android:background="@android:color/transparent"
        android:contentDescription="Google Login"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/google_icon" />

    <ImageButton
        android:id="@+id/facebooklogin"
        android:onClick="fblogin"
        android:layout_width="78dp"
        android:layout_height="60dp"
        android:layout_marginStart="205dp"
        android:layout_marginTop="613dp"
        android:layout_marginEnd="128dp"
        android:layout_marginBottom="58dp"
        android:background="@android:color/transparent"
        android:contentDescription="Facebook Login"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fb_icon1" />

    <ImageView
        android:id="@+id/lefcornerimage"
        android:layout_width="125dp"
        android:layout_height="155dp"
        android:layout_marginEnd="336dp"
        android:layout_marginBottom="652dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/left_corner1" />

    <ImageView
        android:id="@+id/rightcornerimage"
        android:layout_width="221dp"
        android:layout_height="229dp"
        android:layout_marginStart="268dp"
        android:layout_marginTop="584dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/right_corner1" />

</androidx.constraintlayout.widget.ConstraintLayout>