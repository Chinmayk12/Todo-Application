<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:elevation="15dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:src="@drawable/add_task_stymbol"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Update Task"
            android:layout_marginTop="10dp"
            android:textAllCaps="true"
            android:textSize="30sp"
            android:textStyle="bold"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_margin="20dp"
            android:gravity="center"
            android:text="Fill the details below to add a task into your TODO"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Task Title"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/updatetasktitle"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/rounded_edittext_background"
            android:drawableTint="#673AB7"
            android:gravity="center"
            android:hint="Update Task Title"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Task Description"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/updatetaskdescription"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/rounded_edittext_background"
            android:drawableTint="#673AB7"
            android:gravity="center"
            android:hint="Update Task Description"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Task Date"
            android:textSize="18dp"/>

        <EditText
            android:id="@+id/updatetaskdate"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/rounded_edittext_background"
            android:drawableStart="@drawable/calender_icon"
            android:drawableTint="#673AB7"
            android:gravity="center"
            android:hint="Update Task Date"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Task Time"
            android:textSize="18dp"/>

        <EditText
            android:id="@+id/updatetasktime"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/rounded_edittext_background"
            android:drawableStart="@drawable/clock_icon"
            android:drawableTint="#673AB7"
            android:clickable="true"
            android:gravity="center"
            android:hint="Update Task Time"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Task Status"
            android:textSize="18dp"/>

        <Spinner
            android:id="@+id/spinnerTaskStatus"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_edittext_background"
            android:spinnerMode="dropdown"
            android:layout_gravity="center"
            android:drawableTint="#673AB7"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            />

        <Button
            android:id="@+id/updatebtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Task"
            android:layout_margin="10dp"
            />

    </LinearLayout>

</androidx.cardview.widget.CardView>